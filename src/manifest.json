{
  "manifest_version": 2,

  "name": "Hull Preview Extenstion",
  "description": "Use that extension to preview Hull User details on a set of supported services",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.ico",
    "default_popup": "options.html"
  },
  "content_scripts": [
    {
      "matches": ["file://**/*/test.html", "https://*.salesforce.com/*"],
      "js": ["hull-preview-main.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://dd04rofzygnm0.cloudfront.net/",
    "https://hullbeta.io/",
    "https://hullapp.io/"
  ],
  "web_accessible_resources": [
    "vendor/hull.js"
  ]
}

{
  "manifest_version": 2,

  "name": "Hull Preview Extension",
  "description": "Use that extension to preview Hull User details on a set of supported services",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.ico",
    "default_popup": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "file://**/*/test.html",
        "https://*.salesforce.com/*",
        "https://*.admin.mailchimp.com/lists/members/*",
        "https://app.hubspot.com/sales/*"
      ],
      "js": [
        "scripts/get-connector-url.js",
        "scripts/get-ident.js",
        "scripts/get-token.js",
        "scripts/get-switch.js",
        "scripts/encode-ident.js",
        "scripts/inject-iframe.js",
        "scripts/main.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/",
    "https://dd04rofzygnm0.cloudfront.net/",
    "https://hullbeta.io/",
    "https://hullapp.io/",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "scripts/get-connector-url.js",
      "scripts/get-token.js", "scripts/encode-ident.js", "scripts/inject-iframe.js",
      "scripts/background.js"
    ]
  },
  "web_accessible_resources": [
    "vendor/hull.js"
  ]
}
